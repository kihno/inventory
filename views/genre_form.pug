extends layout 

block content 
    
    h1= title 

    form(method='POST' action='')
        .form 
            label(for='name') Genre:
            input#name.input(type='text', placeholder='FPS, Puzzle etc.', name='name', value=(undefined===genre ? '' : genre.name))
        button.submit(type='submit') Submit 

    if errors 
        ul 
            for error in errors 
                li!= error.msg